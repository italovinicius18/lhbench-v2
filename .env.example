# LHBench v2 Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# TPC-DS Configuration
# =============================================================================

# Scale factor for TPC-DS data generation (1 = ~1GB)
SCALE_FACTOR=1

# =============================================================================
# Data Management
# =============================================================================

# Path for storing TPC-DS data files locally
DATA_PATH=/mnt/c/Users/italo/WSL_DATA/tpcds

# Automatically upload generated data to MinIO
UPLOAD_TO_MINIO=true

# Force regeneration of data even if it already exists
FORCE_REGENERATE=false

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================

# MinIO endpoint URL
MINIO_ENDPOINT=http://localhost:9000

# MinIO credentials (default for development)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# S3 bucket name for lakehouse data
BUCKET_NAME=lakehouse
MINIO_BUCKET_NAME=lakehouse

# =============================================================================
# Spark Configuration
# =============================================================================

# Engines to test (space-separated)
ENGINES=delta iceberg hudi

# Spark driver memory allocation
SPARK_DRIVER_MEMORY=4g

# Spark executor memory allocation
SPARK_EXECUTOR_MEMORY=4g

# =============================================================================
# Benchmark Configuration
# =============================================================================

# Number of iterations for query benchmarks
BENCHMARK_ITERATIONS=3

# Query timeout in seconds
QUERY_TIMEOUT=300

# =============================================================================
# Development Configuration
# =============================================================================

# Python path (auto-detected, usually no need to change)
PYTHONPATH=/home/italo/lhbench-v2

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# =============================================================================
# Docker Configuration
# =============================================================================

# MinIO Docker image
MINIO_IMAGE=minio/minio:latest

# MinIO data directory (host path for persistence)
MINIO_DATA_DIR=/tmp/minio-data

# =============================================================================
# Performance Tuning
# =============================================================================

# Spark SQL adaptive query execution
SPARK_AQE_ENABLED=true

# Spark SQL statistics collection
SPARK_SQL_STATISTICS=true

# Number of CPU cores to use (0 = auto-detect)
CPU_CORES=0

# Maximum memory usage (GB)
MAX_MEMORY=8
