# ============================================================================
# LAKEHOUSE BENCHMARK CONFIGURATION - TPC-DS
# ============================================================================

# Benchmark Settings
BENCHMARK_NAME=lakehouse-tpcds-benchmark
BENCHMARK_VERSION=2.0.0

# Frameworks to test (comma-separated: delta,iceberg,hudi)
FRAMEWORKS=delta,iceberg,hudi

# ============================================================================
# TPC-DS BENCHMARK CONFIGURATION
# ============================================================================

# Scale Factor (1=3GB, 10=30GB, 100=300GB, 1000=3TB)
TPCDS_SCALE_FACTOR=1

# Query tier to run (tier1, tier2, tier3, lhbench, all)
# tier1 = 10 essential queries
# tier2 = 15 advanced queries
# tier3 = 10 stress queries
# lhbench = 5 refresh test queries (Q3,Q9,Q34,Q42,Q59)
# all = all 99 queries
TPCDS_QUERY_TIER=all

# ============================================================================
# DATA PATHS
# ============================================================================

DATA_ROOT=/data
BRONZE_PATH=/data/bronze/tpcds
SILVER_PATH=/data/silver
GOLD_PATH=/data/gold
METRICS_PATH=/data/gold/metrics

# ============================================================================
# SPARK CLUSTER CONFIGURATION
# ============================================================================

# Master
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_MASTER_PORT=7077
SPARK_MASTER_UI_PORT=8080

# Workers (2 workers)
SPARK_WORKER_COUNT=2
SPARK_WORKER_CORES=5
SPARK_WORKER_MEMORY=3g

# Driver
SPARK_DRIVER_MEMORY=2g
SPARK_DRIVER_CORES=2

# Executor
SPARK_EXECUTOR_MEMORY=2500m
SPARK_EXECUTOR_CORES=5
SPARK_CORES_MAX=10

# SQL Optimizations
SPARK_SQL_ADAPTIVE_ENABLED=true
SPARK_SQL_ADAPTIVE_COALESCE_PARTITIONS=true
SPARK_SQL_SHUFFLE_PARTITIONS=200

# ============================================================================
# LAKEHOUSE FRAMEWORK CONFIGURATION
# ============================================================================

# Delta Lake
DELTA_ENABLED=true
DELTA_WAREHOUSE_PATH=/data/silver/delta

# Apache Iceberg
ICEBERG_ENABLED=true
ICEBERG_WAREHOUSE_PATH=/data/silver/iceberg

# Apache Hudi
HUDI_ENABLED=true
HUDI_WAREHOUSE_PATH=/data/silver/hudi
HUDI_TABLE_TYPE=COPY_ON_WRITE

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
ENABLE_DETAILED_METRICS=true
